{
  "name": "craklabs/skeleton-service",
  "description": "This project is intented to be a skeleton for PHP based services",
  "license": "MIT",
  "authors": [
    {
      "name": "Sylvain Witmeyer",
      "email": "switmeyer@crakmedia.com"
    },
    {
      "name": "Jean-Michael Cyr",
      "email": "cyrjeanmichael@gmail.com"
    }
  ],
  "require": {
    "silex/silex": "~1.2",
    "doctrine/dbal": "~2.2",
    "monolog/monolog": "~1.13",
    "craklabs/rest-normalizer": "~1.0",
    "predis/service-provider": "~1.0",
    "dbtlr/silex-doctrine-migrations": "~1.0",
    "doctrine/migrations": "~1.0@dev",
    "symfony/console": "~2.4.0",
    "mockery/mockery": "0.9.4",
    "league/statsd" : "1.2.0",
    "justinrainbow/json-schema": "~1.3",
    "support3w/json-api-transport-service": "~0.0",
    "support3w/api-generics": "~0.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "~4.6",
    "behat/behat": "~2.5",
    "symfony/browser-kit": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "Api\\Base\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Api\\Base\\": "tests/"
    }
  },
  "config": {
    "bin-dir": "bin/"
  }
}
